/* pages/root/root.wxss */
.root-container{
  width: 100%;
  height: 100vh;
  background-image: url("https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=3708316666,2154873467&fm=26&gp=0.jpg");
  background-size: cover;
  box-sizing: content-box;
  border: solid transparent;
  overflow: hidden;
}
.introduce-bar{
  color: aliceblue;
  
}
.logo{
  display: block;
  margin:5rem auto;
  width: 13rem;
  height: 15rem;
  }
.logo::after{
  content: "";
  display: block;
  position: absolute;
  z-index: 10000;
  width: 14rem;
  height: 15rem;
  top: 4rem;
  background-image: url("https://s3.ax1x.com/2021/02/04/ylgIrd.png");
  background-size: cover;
  animation: linear 3s rotate infinite;
}
@keyframes rotate{
  from{
    transform: rotate(360deg);
  }
  to{
    transform: rotate(0deg);
  }
}
.introduce-text{
  display: inline-block;
  text-align: center;
  font-size: 1rem;
}
.btn-bar{
  display: flex;
  justify-content: space-around;
  align-content: center;
  margin-top: 1rem;
}
.btn:hover{
color: red;
}